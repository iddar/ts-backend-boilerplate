{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "types": ["jest", "node"],
      "strict": true,
      "sourceMap": true,
      "outDir": "server",
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*"
        ]
      }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "**/__tests__/*"]
  }
